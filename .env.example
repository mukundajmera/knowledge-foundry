# =============================================================
# Knowledge Foundry — Environment Variables
# =============================================================
# Copy to .env and fill in your values.

# --- Application ---
APP_NAME=knowledge-foundry
APP_ENV=development
APP_DEBUG=true
APP_HOST=0.0.0.0
APP_PORT=8000
APP_LOG_LEVEL=INFO

# --- Anthropic (LLM) ---
ANTHROPIC_API_KEY=sk-ant-XXXXXXXXXXXX
ANTHROPIC_MODEL_OPUS=claude-opus-4-20250514
ANTHROPIC_MODEL_SONNET=claude-sonnet-4-20250514
ANTHROPIC_MODEL_HAIKU=claude-3-5-haiku-20241022
ANTHROPIC_MAX_RETRIES=3
ANTHROPIC_TIMEOUT=30

# --- OpenAI (Embeddings) ---
OPENAI_API_KEY=sk-XXXXXXXXXXXX
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_EMBEDDING_DIMENSIONS=3072

# --- Qdrant (Vector DB) ---
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_GRPC_PORT=6334
QDRANT_API_KEY=
QDRANT_COLLECTION_PREFIX=kf_tenant_

# --- Redis (Cache) ---
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=kf:

# --- PostgreSQL ---
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=knowledge_foundry
POSTGRES_USER=kf_user
POSTGRES_PASSWORD=kf_dev_password

# --- Security ---
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=480

# --- Neo4j (Graph DB) ---
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=kf_dev_password

# --- Oracle Code Assist (Optional) ---
ORACLE_ENDPOINT=https://your-oracle-instance.oraclecloud.com/v1
ORACLE_API_KEY=
ORACLE_MODEL=oracle-code-assist-v1
ORACLE_TIMEOUT=30

# --- LM Studio (Optional — local) ---
LMSTUDIO_HOST=localhost
LMSTUDIO_PORT=1234
LMSTUDIO_MODEL=
LMSTUDIO_TIMEOUT=60

# --- Ollama (Optional — local) ---
OLLAMA_HOST=localhost
OLLAMA_PORT=11434
OLLAMA_MODEL=llama3
OLLAMA_TIMEOUT=120
